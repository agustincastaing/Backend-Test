{
	"compilerOptions": {
		"target": "ES2016",
		"module": "commonjs",
		"lib": ["es6", "dom"],
		"outDir": "./dist",
		"rootDir": "./src",
		"strict": true,
		"moduleResolution": "node",
		"baseUrl": "src",
		"paths": {
			"@types": ["./types"],
			"@core/*": ["core/*"],
			"@data/*": ["data/*"],
			"@api/*": ["api/*"],
			"@config/*": ["config/*"],
			"@common/*": ["common/*"],
			"@exceptions": ["exceptions/index"]
		},
		//"types": ["reflect-metadata", "jest"],
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"suppressImplicitAnyIndexErrors": true
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "tarifas.json", "**/*.test.ts", "**/*.spec.ts"]
}
